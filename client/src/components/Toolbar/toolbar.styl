.toolbar {
    width: 100%;
    height: 32px;
    background: #333;
    position: fixed;
    top: 0;
    z-index: 10000;
    -webkit-app-region: drag;

    .title {
        float: left;
        margin: 0.6em 1em 0;
    }

    .pure-button {
        padding: 0px;
        height: inherit;
        width: 45px;
        float: right;
        border-radius: 0px;
        -webkit-app-region: no-drag;
        background: rgba(0,0,0,0);
        color: #eee;
        font-size: 1.3em;

        .lnr {
            position: relative;
            bottom: -1.5px;
        }

        &.button-close {
            &:hover {
                background: rgb(202, 60, 60);
            }
        }

        &.button-restore {
            &:hover {
                background: #45c15a;
            }
        }

        &.button-restore {
            &:hover {
                background: #45c15a;
            }
        }

        &.button-min {
            &:hover {
                background: #747474;
            }

            .lnr {
                bottom: 0px;
            }
        }

        &.button-menu {
            float: left;
            &:hover {
                background: #4CA338;
            }

            .lnr {
                font-size: 1.1em;
                bottom: -1px;
            }
        }

        &.button-dev {
            float: left;
            &:hover {
                background: rgb(250, 142, 0);
            }

            i {
                position: relative;
                bottom: -1.5px;
            }
        }
    }
}
